%aside.col-md-4
  - provide(:title, @user.name)
  %section.user_info
    %span.avater
      = image_tag avater_url(@user), :width => '80'
    %h1
      = @user.name
    %h1
      = @user.email
    %h1
      = @user.tweets.count
      Tweets
  %section.stats
    = render 'partials/stats'
.col-md-8
  %h1
    = title
    Users
  %ul.users
    - @users.each do |user|
      %li
        %span.avater
          = image_tag avater_url(user), :width => '80'
        = link_to user.name, user
