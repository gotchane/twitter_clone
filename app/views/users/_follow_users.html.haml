%aside.col-md-4
  - provide(:title, @user.name)
  %section.user_info
    .user-info__left
      = avater_image(@user)
    .user-info__right
      %h1
        = @user.name
      %h1
        = @user.email
      %h1
        = @user.tweets.count
        Tweets
  %section.stats
    = render 'partials/stats'
.col-md-8
  %h1
    = title
    Users
  %ul.users
    - @users.each do |user|
      %li.users__item
        = avater_image(user)
        = link_to user.name, user
