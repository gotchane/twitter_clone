<p><%=notice%></p>

<aside class="col-md-4">
  <% provide(:title, @user.name) %>
  <section class="user_info">
    <span class="avater"><%= image_tag @user.avater? ? @user.avater.url : "no-image.jpg", :width => '80' %></span>
    <h1><%= @user.name %></h1>
    <h1><%= @user.email %></h1>
  </section>
  <section class="stats">
    <%= render 'partials/stats' %>
  </section>
  <% if @user == current_user %>
    <section class="tweet_form">
      <%= render "tweets/form_new", {user: @user, tweet: @tweet_post} %>
    </section>
  <% end %>
</aside>
<div class="col-md-8">
  <%= render 'form_follow' if logged_in? %>
    <h3>Tweets (<%= @tweets.count %>)</h3>
    <% if @tweets.any? %>
      <ol class="tweets">
        <%= render @tweets %>
      </ol>
      <%= will_paginate @tweets %>
    <% end %>
</div>
