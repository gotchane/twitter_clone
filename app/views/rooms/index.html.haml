%h1 Direct Messages

.rooms-button
  = link_to 'Create Message', new_user_room_path(current_user), class: 'btn btn-primary'

%ul.rooms
  - @rooms.each do |room|
    = link_to user_room_path(current_user,room) do
      %li.rooms__item
        .rooms__item__avater
          = image_tag avater_url(room.messages.first.user), class: 'rooms-avater'
        .rooms__item__box
          %span.rooms__item__box__user
            - room.users.each do |user|
              = user.name + ","
          %span.rooms__item__box__msg
            = room.messages.last.body

= link_to 'Back to previous page', :back
